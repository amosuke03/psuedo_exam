<form class="pure-form" action="/renew/<%= @memo.id %>" method="post">
    <fieldset>
        <legend>メモの編集</legend>

        <input type="text" placeholder="タイトル" name="title" value="<%= @memo.title %>">
        <input type="text" placeholder="内容" name="content" value="<%= @memo.content %>">

        <label for="categories">カテゴリ</label>
        <select id="categories" name="category">
        <% @categories.each do |category| %>
      <option value="<%= category.id %>"><%= category.name %></option>
        <% end %>
        </select>
        <button type="submit" class="pure-button pure-button-primary">更新</button>
    </fieldset>
</form>
